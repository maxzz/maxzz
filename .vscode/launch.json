    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            
            "args": ["${relativeFile}"],
            "runtimeArgs": ["-r", "ts-node/register"],

            "cwd": "${workspaceRoot}",

            "console": "internalConsole"
        }
    ]
}